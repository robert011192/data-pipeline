# Application
APP_NAME=Market Data Pipeline
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/market_data
DATABASE_ECHO=False

# Alpha Vantage API (Free tier: https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=api-key
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query

# ETL Configuration
ETL_ENABLED=True
# How often to run scheduled ETL (in minutes)
# Recommended: 60-1440 minutes (1 hour to 1 day) for free API tier
# Alpha Vantage free tier: 25 requests/day, 5 requests/minute
ETL_INTERVAL_MINUTES=60
ETL_BATCH_SIZE=100
DEFAULT_TICKERS=AAPL,GOOGL,MSFT,AMZN,TSLA

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000
